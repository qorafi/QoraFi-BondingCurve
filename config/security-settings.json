// config/security-settings.json
{
  "riskManagement": {
    "userRiskScoring": {
      "enabled": true,
      "highRiskThreshold": 8000,
      "suspiciousActivityWindow": 3600,
      "maxTransactionsPerWindow": 10
    },
    "behaviorAnalysis": {
      "enabled": true,
      "trackTransactionPatterns": true,
      "flagLargeTransactions": true,
      "largeTransactionThreshold": "100000000000"
    },
    "monitoringIntervals": {
      "liquidityCheck": 3600,
      "priceValidation": 300,
      "riskAssessment": 1800
    }
  },
  "emergencyProcedures": {
    "automaticPause": {
      "enabled": true,
      "triggers": [
        "circuitBreakerMultipleTriggers",
        "flashLoanDetection",
        "liquidityBelowThreshold"
      ]
    },
    "emergencyContacts": {
      "governanceTeam": [],
      "securityTeam": [],
      "technicalTeam": []
    },
    "escalationProcedure": [
      "automaticPause",
      "notifyGovernance",
      "executeEmergencyProcedures",
      "publicCommunication"
    ]
  },
  "alerting": {
    "enabled": true,
    "channels": ["discord", "telegram", "email"],
    "alertLevels": {
      "info": {
        "normalOperations": true,
        "parameterUpdates": true
      },
      "warning": {
        "highVolumeDetected": true,
        "unusualUserBehavior": true,
        "priceVolatility": true
      },
      "critical": {
        "circuitBreakerTriggered": true,
        "emergencyModeActivated": true,
        "flashLoanDetected": true,
        "liquidityThresholdBreached": true
      }
    }
  },
  "compliance": {
    "auditRequirements": {
      "codeAudits": true,
      "securityReviews": true,
      "penetrationTesting": true
    },
    "reportingRequirements": {
      "dailyReports": true,
      "weeklyAnalysis": true,
      "monthlyReview": true,
      "incidentReports": true
    }
  }
}